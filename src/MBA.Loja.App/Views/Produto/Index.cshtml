@model IEnumerable<MBA.Loja.App.ViewModels.ProdutoViewModel>
@{
    ViewData["Title"] = "Produtos";
}

<h1>Todos os Produtos</h1>
<p>
    <a class="btn btn-primary" asp-controller="Produto" asp-action="Create">
        <span class="fa fa-plus"></span>Cadastrar produto
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    <img />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    R$ @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#detalhesModal" data-imagem="@item.Imagem" data-id="@item.Id" data-nome="@item.Nome" data-valor="@item.Preco"><spam class="fa fa-search"></spam></button>
                </td>
            </tr>
        }
    </tbody>
</table>

