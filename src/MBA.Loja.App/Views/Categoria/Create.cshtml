@model MBA.Loja.App.ViewModels.Categoria.CreateCategoriaViewModel
@{
    ViewData["Title"] = "Cadastro de categoria";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 mx-auto">
                <div class="row">

                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>                       
                    </div>

                    <div class="col-md-7">
                        <div class="col-md-4 d-flex align-baseline mb-3">
                            <div class="form-check">
                                <input asp-for="Ativo" class="form-check-input" />
                                <label asp-for="Ativo" class="form-check-label"></label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3 d-flex gap-2">
                                <a class="btn btn-secondary" asp-action="Index" asp-controller="Produto">
                                    <i class="fa fa-arrow-left"></i> Voltar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-save"></i> Cadastrar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
